{% assign heading = section.settings.heading %}
{% assign btntext = section.settings.btntext %}
{% assign collection = section.settings.collection %}

<div id="featured-container">
  <div id="line-1">
    <!-- Line 1: Heading, "Shop All" button, and pagination -->
    <h2>{{ heading }}</h2>
    <a class="shop-all-btn" href="{{ section.settings.shop_all_url }}" style="color: black;">{{ btntext }}</a>
    <!-- Use URL from schema settings -->
    <div class="pagination">
      <button class="prev-btn">&lt;</button>
      <button class="next-btn">&gt;</button>
    </div>
  </div>
  <div id="line-2">
    <!-- Line 2: Collection products displayed with overflow hidden using a product slider -->
    <div class="product-slider">
      {% for product in collection.products %}
        <div class="product-card">
          <a
            href="{{ product.url }}"
            style="text-decoration: none; color: black; display: flex; flex-direction: column; align-items: center;"
          >
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
            <h3 style="text-align: center; margin: 0.5rem; text-decoration: none; color: black;">
              {{ product.title }}
            </h3>
            <p style="text-align: center; margin: 0.5rem; text-decoration: none; color: black;">
              {{ product.price | money }}
            </p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  $(document).ready(function () {
    $('.next-btn').on('click', function () {
      $('.product-slider').animate({
        scrollLeft: '+=200'
      }, 'fast'); // Faster animation
    });

    $('.prev-btn').on('click', function () {
      $('.product-slider').animate({
        scrollLeft: '-=200'
      }, 'fast'); // Faster animation
    });
  });
</script>

