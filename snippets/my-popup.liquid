<style>
   /* Style for popup container */
    /* Style for popup image container */
  .popup-container {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 9999;
  }

  /* Style for popup image */
  .popup-image {
    display: block;
    margin: auto;
    max-width: 80%;
    max-height: 80%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  /* Style for close button */
  .close-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    cursor: pointer;
    color: #fff;
    font-size: 20px;
    z-index: 10000;
  }
</style>

<!-- Button to trigger popup image -->
<button onclick="openPopup()">Open Popup Image</button>

<!-- Popup container -->
<div class="popup-container">
  <button id="open-popup">Open Popup</button>
  <div class="popup-content">
    <img src="{{ image_url }}" alt="Popup Image">
    <button id="close-popup">Close</button>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#open-popup').click(function() {
      $('.popup-content').fadeIn();
    });

    $('#close-popup').click(function() {
      $('.popup-content').fadeOut();
    });
  });
</script>
